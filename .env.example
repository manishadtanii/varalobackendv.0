PORT=3000

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here_make_it_strong

# Email Configuration (Gmail)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Note: For Gmail, use App Password instead of regular password
# Generate at: https://myaccount.google.com/apppasswords

# Recommended: For production on cloud hosts, use SendGrid (HTTPS API) instead of Gmail SMTP
SENDGRID_API_KEY=
SENDGRID_FROM=you@yourdomain.com
